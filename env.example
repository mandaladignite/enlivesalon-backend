# Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_TIMEOUT=10000

# Performance Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Image Optimization
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-api-key

# Payment Configuration
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key
NEXT_PUBLIC_RAZORPAY_KEY_SECRET=your-razorpay-secret

# Security
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce
GOOGLE_SITE_VERIFICATION=your-google-verification

# Feature Flags
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_ENABLE_PWA=true

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_STALE_TIME=300000

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ERROR_REPORTING=true
